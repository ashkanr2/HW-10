@model List<Product> 
<div class="table-responsive text-center">
    <a class="btn btn-success  btn-block btn-lg" asp-controller="Product" asp-action="Create" asp-route-Id="">اضافه کردن محصول  </a>
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Number</td>
                    <td>Price</td>
                     <td></td>
                    <td></td>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {

                    <tr>
                        <th>@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Number</td>
                        <td>@item.Price</td>
                         <td>
                        
                        <a class="btn btn-danger btn-block btn-lg" asp-controller="Product" asp-action="Delete" asp-route-Id="@item.Id">حذف محصول</a>
                        <a class="btn btn-info btn-block btn-lg" asp-controller="Product" asp-action="Edit" asp-route-Id="@item.Id">ویرایش</a>
                       @if(item.Number!=0){
                        <a class="btn btn-success btn-block btn-lg" asp-controller="Order" asp-action="Add" asp-route-Id="@item.Id">اضافه به سبد </a>
                       }

                    </td>
                         <td>
                              @if(@item.PersonId==2)
                        {
                            <a class="btn btn-primary btn-block btn-lg" asp-controller="Order" asp-action="Delete" asp-route-Id="@item.Id">حذف از سبد </a>
                        }
                         </td>


                        
                    </tr>

                }
            </tbody>
        </table>

    </div>
